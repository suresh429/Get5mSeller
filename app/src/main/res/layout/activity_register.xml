<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.pivotalsoft.get5mseller.RegisterActivity"
    android:background="@drawable/layerbackground"
    android:gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/imageView2"
            android:src="@drawable/get5m"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_Name"
            android:layout_gravity="center_horizontal"
            android:hint=" Business Name"
            android:background="@drawable/rouncorner_edittext"
            android:paddingLeft="10dp"
            android:textAlignment="gravity"
            android:drawablePadding="10dp"
            android:textColor="@color/whiteColor"
            android:textColorHint="@color/whiteColor"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="Phone number"
            android:background="@drawable/rouncorner_edittext"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:textColorHint="@color/whiteColor"
            android:textColor="@color/whiteColor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/editText4"
            android:hint="ZIP Code"
            android:background="@drawable/rouncorner_edittext"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:textColor="@color/whiteColor"
            android:textColorHint="@color/whiteColor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText5"
            android:hint="Email"
            android:background="@drawable/rouncorner_edittext"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:textColor="@color/whiteColor"
            android:paddingLeft="10dp"
            android:textColorHint="@color/whiteColor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText7"
            android:background="@drawable/rouncorner_edittext"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/whiteColor"
            android:textColor="@color/whiteColor"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/button_submit"
            android:background="@drawable/rouncorner_button"
            android:textColor="@color/whiteColor"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

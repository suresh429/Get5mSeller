<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/whiteColor"
    tools:context="com.pivotalsoft.get5mseller.SocialInformationActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your social page links below"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Facebook url"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/editText12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Twitter url"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Youtube url"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/editText14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="GooglePlus url"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Linkedin url"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/editText16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Website url"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout"
        android:padding="10dp"/>

</LinearLayout>
